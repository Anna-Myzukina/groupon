<% provide(:title, "All my activities") %>
<% provide(:navbar_page_title, "all my activities") %>
<nav class="main_color">
  <ul class="ul_in_nav">
    <li><a class="page-link" href="/groups"><i class="fa arrow fa-bars"></i></a></li>
    <li><a class="page-link" href="#"><h1>ACTIVITIES</h1></a></li>
    <li><a class="page-link" href="#"><i class="fa arrow fa-search"></i></a></li>
  </ul>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="card bg-gray " style="width: 100%">
                <%= form_for @activity do |f| %>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item mr-3">
                        <%= f.text_field :name, placeholder: "Name of activity" %>
                        </li>
                        <li class="list-group-item mr-3">
                        <%= f.text_field :hours, placeholder: "Hours of activity" %>
                        </li>
                        <li class="list-group-item mr-3">
                        <p>Choose group:</p>
                        <%= f.collection_check_boxes :group_ids, Group.all,:id, :name do |check| %>
                        <div class="collection-check-box">
                            <%= check.check_box %>
                            <%= check.label %>
                        </div>
                        </li>
                    </ul>
                    <% end %>
                </div>
                <div class="around_btn">
                <%= f.submit "Add new activity", class: "btn-styles" %>
                </div> 
              <%end%>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>

