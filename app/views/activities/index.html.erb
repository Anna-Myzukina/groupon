<% provide(:title, "All my activities") %>
<% provide(:navbar_page_title, "all my activities") %>
<nav class="main_color">
  <ul class="ul_in_nav">
    <li><a class="page-link" href="/groups"><i class="fa arrow fa-bars"></i></a></li>
    <li><a class="page-link" href="#"><h1>EXTERNAL</h1></a></li>
    <li><a class="page-link" href="#"><i class="fa arrow fa-search"></i></a></li>
  </ul>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
       <% @activities.each do |activity| %> 
            <section class="activities">
                <div class="total">
                    <h3 class="proxima_bold">Total hours:</h3>
                    <h3 class="proxima_bold_dark">
                    
                        <%= activity.hours %> 
                   
                    <h3>
                </div>
        </section>    
            <div class="card bg-gray " style="width: 100%">
                <ul class="list-group list-group-flush">
                     <li class="list-group-item mr-3">
                     <% activity.groups.each do |group_activity| %>
                     <span class="proxima_bold"><%= group_activity.name %> : </span>
                     <%end%>
                      <span class="proxima_bold_dark"><%= activity.name %> </span>
                      </li>
                </ul>
                    <div class="btn_group">
                      <%= link_to 'Edit',edit_activity_path(activity) %> 
                      <%= link_to 'delete',activity,method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
            </div>
            <% end %>
            <div class="around_btn">
            <%= button_to 'back', new_activity_path, method: :get, class: 'btn-styles' %>
            </div> 
            
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>

