
<% provide(:title, 'Sign up') %>
<h1 class="text-white">GROUPON</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <div class="around_btn">
      <%= f.submit "Sign up", class: "btn btn-styles" %>
      </div>
    <% end %>
  </div>
</div>
